
[global]
    font = Ubuntu Mono 12
    allow_markup = yes
    indicate_hidden = yes

    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "<big>%s</big>\n<small>%b</small>"

    sort = yes
    # "left", "center" and "right"
    alignment = center 
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no

    geometry = "300x5-20+40"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    icon_path = /usr/share/icons/breeze-dark/status/64/:/usr/share/icons/breeze-dark/status/16/:/usr/share/icons/breeze-dark/devices/64/:/usr/share/icons/breeze-dark/devices/16/
    icon_position = right
    max_icon_size = 64

[frame]
    width = 4
    color = "#71bfff"

[shortcuts]
    # 'ctrl', 'mod1' (the alt-key), 'mod2', 'mod3'
    close = mod1+n
    close_all = mod1+ctrl+n
    # history = mod1+shift+n

    # context menu
    context = ctrl+shift+period

[urgency_low]
    background = "#0f1419"
    foreground = "#454f63"
    frame_color = "#454f63"
    timeout = 5
    show_age_threshold = -1
    idle_threshold = 0

[urgency_normal]
    background = "#0f1419"
    foreground = "#e1e5ea"
    timeout = 5

[urgency_critical]
    background = "#e25963"
    foreground = "#FFFFFF"
    timeout = 15
