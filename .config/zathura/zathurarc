# Light/Default mode settings:
# 
#
set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#dfe3e8" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#0f1419" # Background
set notification-fg             "#dfe3e8" # Foreground

set completion-bg               "#0f1419" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#0f1419" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#dfe3e8" # Foreground

set index-bg                    "#0f1419" # Background
set index-fg                    "#dfe3e8" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#dfe3e8" # Foreground

set inputbar-bg                 "#0f1419" # Background
set inputbar-fg                 "#dfe3e8" # Foreground
set statusbar-bg                "#0f1419" # Background
set statusbar-fg                "#dfe3e8" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#0f1419" # Background
set default-fg                  "#dfe3e8" # Foreground

set render-loading              true
set render-loading-fg           "#0f1419" # Background
set render-loading-bg           "#dfe3e8" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#0f1419" # Background
set recolor-darkcolor           "#dfe3e8" # Foreground

# Startup options
#
#
set adjust-open width
set recolor true
set guioptions none
